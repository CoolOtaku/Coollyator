<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacrau"
    tools:context=".Main3Activity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="@+id/bClear2"
                    app:layout_constraintStart_toStartOf="@+id/bClear2"
                    app:layout_constraintTop_toBottomOf="@+id/bClear2" />

                <TextView
                    android:id="@+id/nr2"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@android:drawable/alert_dark_frame"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <Button
                    android:id="@+id/bClear2"
                    android:layout_width="116.6dp"
                    android:layout_height="70dp"
                    android:background="@android:drawable/alert_dark_frame"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="19sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="@+id/tableRow3"
                    app:layout_constraintStart_toStartOf="@+id/tableRow3"
                    app:layout_constraintTop_toBottomOf="@+id/tableRow3" />

                <TableRow
                    android:id="@+id/tableRow"
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/edt"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:background="@android:drawable/alert_dark_frame"
                        android:inputType="text"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30sp"
                        android:textStyle="bold|italic"
                        tools:layout_editor_absoluteX="23dp"
                        tools:layout_editor_absoluteY="60dp" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="65dp"
                        android:layout_height="70dp"
                        android:background="@drawable/sim"
                        android:textStyle="normal"
                        tools:layout_editor_absoluteX="173dp"
                        tools:layout_editor_absoluteY="60dp" />

                    <EditText
                        android:id="@+id/textView5"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:background="@android:drawable/alert_dark_frame"
                        android:inputType="none"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="30sp"
                        android:textStyle="bold|italic"
                        tools:layout_editor_absoluteX="238dp"
                        tools:layout_editor_absoluteY="60dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/tableRow"
                    app:layout_constraintStart_toStartOf="@+id/tableRow"
                    app:layout_constraintTop_toBottomOf="@+id/tableRow">

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="182.5dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/alert_dark_frame"
                        app:layout_constraintStart_toStartOf="@+id/edt"
                        app:layout_constraintTop_toBottomOf="@+id/edt">

                        <RadioButton
                            android:id="@+id/bR"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                        <RadioButton
                            android:id="@+id/bM"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                        <RadioButton
                            android:id="@+id/bD"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                        <RadioButton
                            android:id="@+id/bG"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                        <RadioButton
                            android:id="@+id/bH"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="30sp"
                            android:textStyle="bold|italic" />

                        <RadioButton
                            android:id="@+id/bS"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="182.5dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/alert_dark_frame"
                        app:layout_constraintEnd_toEndOf="@+id/textView5"
                        app:layout_constraintTop_toBottomOf="@+id/textView5">

                        <RadioButton
                            android:id="@+id/bR2"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                        <RadioButton
                            android:id="@+id/bM2"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                        <RadioButton
                            android:id="@+id/bD1"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorLink="@color/colorPrimary"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                        <RadioButton
                            android:id="@+id/bG2"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                        <RadioButton
                            android:id="@+id/bH2"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="30sp"
                            android:textStyle="bold|italic" />

                        <RadioButton
                            android:id="@+id/bS2"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="30sp"
                            android:textStyle="bold|italic"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="174dp" />

                    </RadioGroup>
                </TableRow>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>